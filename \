- name: Create /opt/agama directory
  ansible.builtin.file:
    path: /opt/agama
    state: directory

- name: Download Agama files
  ansible.builtin.get_url:
    url: "{{ item.url }}"
    dest: "/opt/agama/{{ item.dest }}"
  loop:
    - { url: "https://github.com/hudolejev/agama/raw/master/agama.py", dest: "agama.py" }
    - { url: "https://github.com/hudolejev/agama/raw/master/Dockerfile", dest: "Dockerfile" }

- name: Build Agama Docker image
  community.docker.docker_image:
    name: agama
    source: build
    build:
      path: /opt/agama

- name: Start Agama Docker container
  community.docker.docker_container:
    name: agama
    image: agama
    state: started
    published_ports:
      - "8001:8000"  
    env:
      AGAMA_DATABASE_URI: "mysql+pymysql://{{ mysql_user }}:{{ mysql_password }}@{{ mysql_host }}/{{ mysql_database }}"
    volumes:
      - /opt/agama:/opt/agama
  no_log: true
