
global:
  scrape_interval:     15s # Set the scrape interval to every 15 seconds. Default is every 1 minute.
  evaluation_interval: 15s # Evaluate rules every 15 seconds. The default is every 1 minute.

scrape_configs:
  - job_name: 'prometheus'

    scrape_interval: 5s
    scrape_timeout: 5s

    metrics_path: '/prometheus/metrics'
    # metrics_path defaults to '/metrics'
    # scheme defaults to 'http'.

    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets: [{% for vm in groups['all'] %}'{{ vm }}:9100'{% if not loop.last %}, {% endif %}{% endfor %}]
    scrape_interval: 5s
    scrape_timeout: 5s

    # metrics_path defaults to '/metrics'
    # scheme defaults to 'http'.
    
  - job_name: mysql
    static_configs:
      - targets: ['db-1:9104','db-2:9104']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: bind9
    static_configs:
      - targets: ['ns-1:9119','ns-2:9119']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: nginx
    static_configs:
      - targets: ['www-1:9113','www-2:9113']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: influxdb-stats
    static_configs:
      - targets: ['influxdb:9424']
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: backup
    static_configs:
      - targets: [backup.{{ mydomain }}:9111]
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: haproxy
    static_configs:
      - targets: ['lb-1:9101','lb-2:9101'] 
    scrape_interval: 5s
    scrape_timeout: 5s

  - job_name: keepalived
    static_configs:
      - targets: [{% for vm in groups['keepalived'] %}'{{ vm }}:9165'{% if not loop.last %}, {% endif %}{% endfor %}]
    scrape_interval: 5s
    scrape_timeout: 5s

